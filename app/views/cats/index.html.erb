<p style="color: green"><%= notice %></p>

<h1>Cats</h1>

<%# ransackが用意しているソートのリンク。クリックするとソートされる。 %>
<%= sort_link @search, :name %>
<%= sort_link @search, :age %>

<%# ransackを使用したフォームでは、form_withの代わりにsearch_form_forを使う %>
<%= search_form_for @search do |f| %>
  <%# カラム名_cont とすると、カラムに対してLIKEを使った曖昧一致検索ができる %>
  <%= f.label :name_cont, '名前' %>
  <%= f.search_field :name_cont %>

  <%# カラム名_eq とすると、カラムに対して完全一致検索ができる %>
  <%= f.label :age_eq, '年齢' %>
  <%= f.search_field :age_eq %>
  <%= f.submit %>

  <%# 検索結果と検索フォームをクリアする %>
  <%= link_to 'クリア', cats_path %>
<% end %>

<div id="cats">
  <% @cats.each do |cat| %>
    <%= render cat %>
    <p>
      <%= link_to "Show this cat", cat %>
    </p>
  <% end %>
</div>

<%= paginate @cats %>

<%= link_to "New cat", new_cat_path %>
